{
  "name": "generate-component-from-template",
  "displayName": "generate-component-from-template",
  "description": "Generate component from the predefined template.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.47.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:generate-component-from-template.generateComponents"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "generate-component-from-template configuration",
      "properties": {
        "generate-component-from-template.path-file-templates": {
          "type": "string",
          "default": ".components-templates",
          "description": "Path to find your file templates."
        },
        "generate-component-from-template.var-component-name": {
          "type": "string",
          "default": "{component_name}",
          "description": "Variable with component name."
        },
        "generate-component-from-template.extension-component": {
          "type": "string",
          "default": "js",
          "description": "Variable with extension of component."        
        },
        "generate-component-from-template.generate-index-export": {
          "type": "boolean",
          "default": true,
          "description": "If true, will generate index export."
        }
      }
    },
    "commands": [
      {
        "command": "generate-component-from-template.generateComponents",
        "title": "Generate Components from templates"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "generate-component-from-template.generateComponents",
          "group": "Generate Components from templates"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.11.0",
    "@types/vscode": "^1.47.0",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "eslint": "^6.8.0",
    "glob": "^7.1.6",
    "mocha": "^7.1.2",
    "typescript": "^3.8.3",
    "vscode-test": "^1.3.0"
  },
  "dependencies": {
    "fs": "^0.0.1-security",
    "path": "^0.12.7"
  }
}
